// prática 004 - lógica de programação
programa
{
	
	funcao inicio()
	{
		cadeia nome
		inteiro idade
		real peso

		escreva("Qual é o seu nome? ")
		leia(nome)
		escreva("Quantos anos você tem? ")
		leia(idade)
		escreva("Qual é o seu peso? ")
		leia(peso)

		escreva("Prazer em te conhecer ", nome, ". Então você já têm ", idade, " anos e pesa ", peso, " quilos.")
	}
}
