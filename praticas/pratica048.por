// prática 048 - lógica de programação
programa
{
	// repetição com variável de controle
	inclua biblioteca Util --> u
	funcao inicio()
	{
		inteiro c
		para (c = 0; c <= 10; c += 2) {  // contagem de 2 em 2 até 10
			escreva(c, " ")
			u.aguarde(400)
		}
	}
}
